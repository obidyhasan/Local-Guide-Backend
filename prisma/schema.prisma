generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              String   @id @default(uuid())
  email           String   @unique
  password        String
  role            UserRole @default(TOURIST)
  name            String
  profilePicture  String?
  bio             String?  @db.Text
  languagesSpoken String[] @default([])
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Guide-specific fields
  expertise     String[] @default([])
  dailyRate     Float?
  totalTours    Int      @default(0)
  averageRating Float    @default(0)

  // Tourist-specific fields
  travelPreferences String[] @default([])

  // Relations
  listings          Listing[]
  bookingsAsTourist Booking[] @relation("TouristBookings")
  bookingsAsGuide   Booking[] @relation("GuideBookings")
  reviews           Review[]  @relation("ReviewsByTourist")
  receivedReviews   Review[]  @relation("ReviewsForGuide")
  sentPayments      Payment[] @relation("PaymentsBySender")
  receivedPayments  Payment[] @relation("PaymentsToReceiver")

  @@map("Users")
}

model Listing {
  id            String   @id @default(uuid())
  guideId       String
  title         String
  description   String   @db.Text
  itinerary     String?  @db.Text
  tourFee       Float
  duration      Int // in hours
  meetingPoint  String
  maxGroupSize  Int
  city          String
  category      String[] @default([])
  images        String[] @default([])
  isActive      Boolean  @default(true)
  totalBookings Int      @default(0)
  averageRating Float    @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  guide    User      @relation(fields: [guideId], references: [id], onDelete: Cascade)
  bookings Booking[]
  reviews  Review[]

  @@map("Listings")
}

model Booking {
  id             String        @id @default(uuid())
  touristId      String
  guideId        String
  listingId      String
  bookingDate    DateTime
  numberOfPeople Int           @default(1)
  totalAmount    Float
  status         BookingStatus @default(PENDING)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  // Relations
  tourist User     @relation("TouristBookings", fields: [touristId], references: [id], onDelete: Cascade)
  guide   User     @relation("GuideBookings", fields: [guideId], references: [id], onDelete: Cascade)
  listing Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)
  payment Payment?
  review  Review?

  @@map("Bookings")
}

model Review {
  id        String   @id @default(uuid())
  bookingId String   @unique
  touristId String
  guideId   String
  listingId String
  rating    Float
  comment   String?  @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  booking Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  tourist User    @relation("ReviewsByTourist", fields: [touristId], references: [id], onDelete: Cascade)
  guide   User    @relation("ReviewsForGuide", fields: [guideId], references: [id], onDelete: Cascade)
  listing Listing @relation(fields: [listingId], references: [id], onDelete: Cascade)

  @@map("Reviews")
}

model Payment {
  id            String        @id @default(uuid())
  bookingId     String        @unique
  senderId      String
  receiverId    String
  amount        Float
  paymentMethod String
  transactionId String?
  status        PaymentStatus @default(PENDING)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  // Relations
  booking  Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  sender   User    @relation("PaymentsBySender", fields: [senderId], references: [id])
  receiver User    @relation("PaymentsToReceiver", fields: [receiverId], references: [id])

  @@map("Payments")
}

enum UserRole {
  TOURIST
  GUIDE
  ADMIN
}

enum BookingStatus {
  PENDING
  CONFIRMED
  COMPLETED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
}
